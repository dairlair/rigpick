{% for rig in rigs %}
    <div class="card" style="width: 18rem;">
        {#<img class="card-img-top" src="..." alt="{{ rig.name }}">#}
        <div class="card-body">
            <h5 class="card-title">{{ rig.name }}</h5>
            <p class="card-text">{{ rig.description }}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Power {{ rig.power|e }}W</li>
        </ul>
        <div class="card-body">
            {% for rigGpu in rig.gpus %}
                <p>
                    {{ rigGpu.count }} x {{ rigGpu.vgaBios.fullName }}
                    (Power limit: {{ rigGpu.powerLimitPercentage }}%)
                </p>
            {% endfor %}
            <a href="{{ path('dashboard_rigs_add_graphic_card', {'id': rig.id}) }}" class="card-link">Add graphic card</a>
            <a href="#" class="card-link">Edit</a>
        </div>
    </div>
{% endfor %}
